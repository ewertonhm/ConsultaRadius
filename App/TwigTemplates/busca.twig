{% extends "base.twig" %}

{% block content %}
    <form method="get" action="busca.php">
        <fieldset>
            <label for="nameField">Buscar</label>
            <input type="text" name="pppoe" {% if pppoe %}value="{{ pppoe }}"{% else %}placeholder="Nome, PPPoE ou CPF/CNPJ" {% endif %}>
            <input class="button-primary" type="submit" value="Buscar">
        </fieldset>
    </form>
    {% if clientes %}
        <table>
            <thead>
            <tr>
                <th>Cliente</th>
                <th>PPPoE</th>
                <th>Endere√ßo</th>
            </tr>
            </thead>
            <tbody>
                {% for cliente in clientes %}
                    <tr>
                        <td><a href="index.php?id={{ cliente.id }}">{{ cliente.nome }} - {{ cliente.documento }}</a></td>
                        <td><a href="index.php?id={{ cliente.id }}">{{ cliente.pppoe }}</a></td>
