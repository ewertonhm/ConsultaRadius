{% extends "base.twig" %}

{% block content %}
    <form method="get" action="busca.php">
        <fieldset>
            <label for="nameField">PPPoE ou Nome</label>
            <input type="text" name="pppoe" {% if pppoe %}value="{{ pppoe }}" {% endif %}>
            <input class="button-primary" type="submit" value="Buscar">
        </fieldset>
    </form>
    {% if clientes %}
        <table>
            <thead>
            <tr>
                <th>Nome</th>
                <th>PPPoE</th>

            </tr>
            </thead>
            <tbody>
                {% for cliente in clientes %}
                    <tr>
                        <td><a href="index.php?id={{ cliente.id }}">{{ cliente.nome }}</a></td>
                        <td><a href="index.php?id={{ cliente.id }}">{{ cliente.pppoe }}</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}