{% extends "base.twig" %}

{% block content %}
<div class="container">

    <div class="row">
        <div class="column">
            <h3 class="no-margin-botton no-padding-botton">{{ nome }}</h3>
            <small>PPPoE: {{ pppoeuser }}</small><br>
            <small>Senha: {{ pppoepass }}</small>
        </div>
        <div class="column float-right">
        </div>
        <div class="column float-right">
            <br>
            <b>ST Contrato:</b> {{ stcontrato }}<br>
            <b>Serviço:</b> {{ servico }}<br>
            <b>Up/Down (Plano):</b> {{ velocidade }}
        </div>
    </div>
    <div class="row">
        <div class="column">
            <h4 class="no-margin-botton no-padding-botton">IP: <a class="anchor-green  " target="_blank" href="http://{{ ip }}:8096">{{ ip }}</a></h4>
            <small class="no-margin-botton no-padding-botton">{{ concentrador }}</small>
        </div>
        <div class="column"></div>
    </div>
    <!-- buttons / tables -->
    <div class="row">
        <div class="column">
            <div class="row">
                <div class="column"><a class="button {% if editar %}button-outline{% endif %}" href="?editar=1">Editar</a></div>
                <div class="column"><a class="button {% if autenticacao %}button-outline{% endif %}" href="?autenticacao=1">Extrato de Autenticação</a></div>
                <div class="column"><a class="button {% if log %}button-outline{% endif %}" href="?log=1">Log do Radius</a></div>
                <div class="column"><a class="button" href="datasend.php?reload={{ pppoeuser }}">Recarregar</a></div>
            </div>
            {% if autenticacao %}
                <div class="row">
                    <div class="column">
                        <table>
                            <thead>
                            <tr>
                                <th>Concentrador</th>
                                <th>Inicio</th>
                                <th>Término</th>
                                <th>Duração</th>
                                <th>Tráfego</th>
                                <th>Motivo Desc.</th>
                                <th>IP Conexão</th>
                                <th>IP Concentrador</th>
                                <th>IPv6</th>
                                <th>MAC</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for auth in auths|slice(0,30) %}
                            <tr>
                                <td>{{ auth.concentrador }}</td>
                                <td>{{ auth.inicio }}</td>
                                <td>{{ auth.termino }}</td>
                                <td>{{ auth.duracao }}</td>
                                <td>{{ auth.trafego }}</td>
                                <td>{{ auth.motivo }}</td>
                                <td>{{ auth.ipconection }}</td>
                                <td>{{ auth.ipconcentrador }}</td>
                                <td>{{ auth.ipv6 }}</td>
                                <td>{{ auth.mac }}</td>
                            </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>N. de Registros:</th>
                                <td>{{ auths|length }}</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>

                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            {% endif %}
            {% if log %}
                <div class="row">
                    <div class="column">
                        <table>
                            <thead>
                            <tr>
                                <th>Data</th>
                                <th>Log</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for log in logs|slice(0,30) %}
                            <tr>
                                <td>{{ log.data }}</td>
                                <td>{{ log.log }}</td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
            {% if editar %}
                <div class="row">

                    <div class="column">
                        <br>
                        <form method="post" action="index.php">
                            <input type="text" name="pppoeuser" value="{{ pppoeuser }}">
                            <input type="text" name="pppoepass" value="{{ pppoepass }}">

                            <input type="submit">

                        </form>
                    </div>
                    <div class="column column-offset-50"></div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}